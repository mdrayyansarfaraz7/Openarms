<% layout('layout/Layout') %>

<div class="approve-container">
    <h2>Approve Request for <%= request.pet.name %></h2>
    <form action="/approve/<%= request._id %>" method="POST">
        <div class="form-group">
            <label for="message">Message to Requester:</label>
            <textarea id="message" name="message" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <label for="contactInfo">Include your contact information?</label>
            <input type="checkbox" id="contactInfo" name="contactInfo">
        </div>
        <button type="submit" class="btn">Send Approval</button>
    </form>
</div>